<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CELL NAME"/>
    <EditText
        android:id="@+id/cell_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PARENT CELL"/>
    <TextView
        android:id="@+id/parent_cell_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CELL SCOPE"/>
    <RadioGroup
        android:id="@+id/radio_vis_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp" >

        <RadioButton
            android:id="@+id/radio_vis_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/vis_hidden" />

        <RadioButton
            android:id="@+id/radio_vis_obscure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/vis_obscure" />

        <RadioButton
            android:id="@+id/radio_vis_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vis_visible" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CELL ID"/>
    <TextView
        android:id="@+id/cell_id_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>